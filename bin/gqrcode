import os
import sys
from gi.repository import Gtk


if __name__ == '__main__':
    if __file__.startswith('/opt/extras.ubuntu.com/gqrcode') or\
            os.getcwd().startswith('/opt/extras.ubuntu.com/gqrcode'):
        sys.path.insert(1, '/opt/extras.ubuntu.com/gqrcode/share/gqrcode')
    else:
        sys.path.insert(1,
                        os.path.normpath(os.path.join(os.getcwd(), '../src')))
    from gqrcode import GQRCode
    mwi = GQRCode()
    Gtk.main()
exit(0)
